{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "./build",
    "pretty": true,
    "rootDir": "./src",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
